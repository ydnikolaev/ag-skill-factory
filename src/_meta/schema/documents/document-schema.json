{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://antigravity.dev/document-schema-v1.json",
  "title": "Antigravity Document Schema V1",
  "description": "Schema for validating document template frontmatter",
  "type": "object",
  "required": [
    "status",
    "owner",
    "lifecycle",
    "work_unit"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "Draft",
        "In Progress",
        "Review",
        "Approved",
        "Archived",
        "Obsolete"
      ]
    },
    "owner": {
      "type": "string",
      "pattern": "^@[a-z][a-z0-9-]*$"
    },
    "lifecycle": {
      "type": "string",
      "enum": [
        "per-feature",
        "per-work-unit",
        "living"
      ]
    },
    "work_unit": {
      "type": "string"
    },
    "created": {
      "type": "string"
    },
    "updated": {
      "type": "string"
    },
    "upstream": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "doc_type": {
            "type": "string"
          },
          "owner": {
            "type": "string"
          }
        }
      }
    },
    "downstream": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "skill": {
            "type": "string"
          },
          "doc_type": {
            "type": "string"
          }
        }
      }
    }
  }
}